{
  "name": "easylink",
  "version": "1.0.4",
  "description": "A revolutionary job platform reimagining how students and employers connect in France",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "pnpm --parallel --filter \"@easylink/*\" type-check",
    "build": "pnpm --filter \"@easylink/*\" build",
    "clean": "pnpm --parallel --filter \"@easylink/*\" clean",
    "dev": "pnpm --parallel --filter \"@easylink/*\" dev",
    "test": "pnpm --parallel --filter \"@easylink/*\" test"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "job-platform",
    "student-employment",
    "work-study",
    "alternance",
    "france",
    "recruitment",
    "professional-networking",
    "hr-suite"
  ],
  "author": "naaiyy",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/naaiyy/Easylink3.git"
  },
  "bugs": {
    "url": "https://github.com/naaiyy/Easylink3/issues"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "17.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@types/node": "^20.17.12",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "semantic-release": "^24.2.1",
    "typedoc": "^0.27.6",
    "typedoc-plugin-markdown": "^4.0.0",
    "typescript": "^5.7.3"
  }
}
